{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "maxFileUploadSize": {
            "type": "number",
            "description": "Maximum file upload size",
            "default": 1000000
        },
        "uploadDir": {
            "type": "string",
            "description": "Assets repository location"
        },
        "uploadTempDir": {
            "type": "string",
            "description": "Temporary directory for file uploads"
        },
        "thumbnailMaxWidth": {
            "type": "number",
            "description": "Maximum width to fit thumbnail in",
            "default": 200
        },
        "thumbnailMaxHeight": {
            "type": "number",
            "description": "Maximum height to fit thumbnail in",
            "default": 100
        },
        "thumbnailSuffix": {
            "type": "string",
            "description": "string to append to an image to get name for thumbnail",
            "default": "_tn"
        },
        "acceptableTypes": {
            "type": "array",
            "description": "array of acceptable types",
            "default": ["image/jpeg", "image/png", "image/gif", "audio/mpeg", "video/mp4", "application/zip"]
        }
    },
    "required": [
        "uploadDir"
    ]
}
